<div class="container mt-5">
  <div class="bg-white rounded p-3 shadow">
    <%= simple_form_for(@animal) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :sex %>
      <%= f.input :size %>
      <%= f.input :species %>
      <%= f.association :categories, as: :check_boxes %>
      <%= f.input :append_photos, as: :file, input_html: { multiple: true } %>

      <div class="d-grid gap-2 col-6 mx-auto">
        <%= f.submit class: "btn btn-primary booking-button" %>
      </div>
    <% end %>
  </div>
</div>
