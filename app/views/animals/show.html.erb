<h1>This is the show page of one animal</h1>
<h1> <%= @animal.name %> </h1>
<%= @animal.description %>
<br>
<%= cl_image_tag(@animal.photos[0].key) %>


<h1> We also want the caretaking booking form here below</h1>


<div class="container mt-5" id="booking">
  <div class="bg-white rounded p-3 shadow">
    <h2> Book a volunteering slot for <%= @animal.name %> now </h2>
    <br>
    <% if current_user.present? %>
      <%= simple_form_for [@animal, @caretaking] do |f| %>
        <%= f.input :comment %>
        <%= f.input :date, as: :datetime, html5: true %>
        <%= f.association :category, collection: @animal.categories %>
        <%= f.submit class: "btn btn-primary booking-button", value:"Book volunteering"%>
      <% end %>
    <% else %>
      <%= link_to "To book a slot, please log in", user_session_path  %>
    <% end %>
  </div>
</div>
