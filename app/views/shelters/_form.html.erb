<div class="bg-white rounded p-3 pb-4 shadow">

  <% if @shelter.errors.present? %>
    <div class="alert alert-danger" role="alert">
      <%= @shelter.errors.full_messages.join("<br>") %>
    </div>
  <% end %>

    <%= simple_form_for(@shelter) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :location %>
      <%= f.input :phone_number %>
      <%= f.input :email %>
      <%= f.input :append_photos, as: :file, input_html: { multiple: true } %>
      <div class="d-grid gap-2 col-6 mx-auto">
        <%= f.submit class: "btn add-shelter-button" %>
      </div>
    <% end %>
  </div>
</div>
