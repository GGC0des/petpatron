<!-- Facebook Open Graph data -->
<% content_for :meta_url, "#{request.original_url}" %>
<% content_for :meta_title, "Pet Patron | Home | Welcome" %>

<div class="background-body">
  <div class="container">
    <div class="hero">
        <div class="hero-content">
          <% if user_signed_in? %>
            <h1>Hi, <%= current_user.first_name.capitalize %> </h1>
          <% else %>
            <h1>Help Animals In Need</h1>
          <% end %>
          <p>Connect with shelters nearby! Book a volunteering slot to care for
              an animal or donate to emergency fundraisers.</p>
          <div class="hero-img"> </div>
        </div>
      </div>

    <div class="three-cards-row">
        <%= link_to emergencies_path, class: "display-inherit" do %>
          <div class="category-card emergency-category-card emergency-img">
            <p class="card-headline">Fundraisers</p>
          </div>
        <% end %>
        <%= link_to animals_path, class: "display-inherit" do %>
          <div class="category-card animal-category-card animal-img">
            <p class="card-headline">Volunteering</p>
          </div>
        <% end %>
        <%= link_to shelters_path, class: "display-inherit" do %>
          <div class="category-card shelter-category-card shelter-img">
            <p class="card-headline">Shelters</p>
          </div>
        <% end %>
      </div>
  </div>
</div>


<!-- Disclaimer Modal -->
<div id="disclaimerModal" class="modal fade" tabindex="-1" aria-labelledby="disclaimerModalLabel" aria-hidden="true" data-controller="disclaimer-modal">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content p-4">
      <div class="modal-header border-0">
        <h5 class="modal-title" id="disclaimerModalLabel">Disclaimer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><strong>PetPatron</strong> is a creative demo for a Ruby web application. All names, people, animals, organisations, places, events, incidents and portrayals are entirely fictional and invented for demo purposes.</p>
        <p>Any resemblance to actual persons or animals (living or dead) or actual entities or events is purely coincidental. None of the fundraisers are real, no real transactions are processed, and the site is solely for simulation purposes.</p>
        <div class="form-check mt-3">
          <input class="form-check-input" type="checkbox" value="" id="dontShowAgain" data-disclaimer-modal-target="checkbox">
          <label class="form-check-label" for="dontShowAgain">
            Don't show this again
          </label>
        </div>
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">I Understand</button>
      </div>
    </div>
  </div>
</div>
